# =============================================================================
# ローカル開発用 環境設定例
# =============================================================================
# このファイルを .env.local にコピーして使用してください

# 必須項目のみ（ローカル開発用）
GEMINI_API_KEY=your_actual_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite-preview-06-17
DATABASE_PATH=agent/database/research_data.db
DATA_DIR_PATH=data
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=100
SUPPORTED_EXTENSIONS=pdf,csv,json,jsonl

# LLMチャット設定（開発用）
CHAT_HISTORY_LIMIT=8
MAX_RESPONSE_LENGTH=2000
MAX_SEARCH_RESULTS=3

# パフォーマンス設定（開発用）
TFIDF_MAX_FEATURES=200
SIMILARITY_THRESHOLD=0.05
BATCH_SIZE=10

# 開発用設定
ENVIRONMENT=development
DEBUG_MODE=true

# 機能フラグ（開発用）
ENABLE_RESEARCH_VISUALIZATION=true
ENABLE_DATASET_ADVISOR=true
ENABLE_ENHANCED_SEARCH=true
ENABLE_AUTO_BACKUP=false

# クラウド連携（開発用 - デフォルト無効）
ENABLE_GOOGLE_DRIVE=false
ENABLE_VECTOR_SEARCH=false
ENABLE_AUTHENTICATION=false